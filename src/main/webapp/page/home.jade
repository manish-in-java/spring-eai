extends ../layout/default

block page_body
  .jumbotron
    h1 Spring Integration
    p
      a(href="http://projects.spring.io/spring-integration/") Spring Integration
      |  is a Java-based integration framework that provides various mechanisms
      |  for integrating disparate software systems.
  .panel.panel-primary
    .panel-heading Users
    table.table.table-bordered.table-condensed.table-hover.table-striped
      thead
        tr
          th First name
          th Last name
          th Email
      tbody
        for person in persons
          tr
            td #{person.firstName}
            td #{person.lastName}
            td #{person.emailAddress}
